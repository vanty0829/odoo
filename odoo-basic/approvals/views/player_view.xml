<odoo>
    <record id="player_view_tree" model="ir.ui.view">
        <field name="name">player.tree</field>
        <field name="model">player</field>
        <field name="arch" type="xml">
            <tree string="Players">
                <field name="name" />
                <field name="country" />
                <field name="gender" />
                <field name="position" />
                <field name="height" />
                <field name="weight" />
            </tree>
        </field>
    </record>
    <record id="player_view_form" model="ir.ui.view">
        <field name="name">player.form</field>
        <field name="model">player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <label for="name"></label>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="country"/>
                            <field name="gender"/>
                            <field name="day_of_birth"/>
                        </group>
                        <group>
                            <field name="position"/>
                            <field name="height"/>
                            <field name="weight"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="player_action" model="ir.actions.act_window">
        <field name="name">Players</field>
		<!-- <field name="type">ir.actions.act_window</field> -->
		<field name="res_model">player</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="player_menu" name="Players" groups = "base.group_user" />
    <menuitem id="player_menu_1" name="Players" parent="player_menu" action="player_action" groups = "base.group_user" />
</odoo>