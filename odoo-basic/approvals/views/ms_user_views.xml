<odoo>
	<record id="ms_user_view_form" model="ir.ui.view">
		<field name="name">ms_user.form</field>
		<field name="model">ms_user</field>
		<field name="arch" type="xml">
			<form string="MS User">
				<sheet>
					<group>
						<field name="name" />
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="ms_user_action" model="ir.actions.act_window">
		<field name="name">MS User</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ms_user</field>
	</record>

	<menuitem id="ms_user" name="MS User" parent="menu_field" action='ms_user_action' />
</odoo>
